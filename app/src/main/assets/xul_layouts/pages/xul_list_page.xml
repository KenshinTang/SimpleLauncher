            </select>
            <select class="selection_space_holder">
                <focus mode="nofocus"/>
                <attr name="height">69</attr>
            </select>
            <select class="hide_selection_item">
                <style name="font-color">0</style>
                <style name="border">0,0</style>
                <attr name="enabled">false</attr>
            </select>
        </selector>
