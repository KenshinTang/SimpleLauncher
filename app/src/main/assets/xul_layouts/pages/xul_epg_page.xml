                <attr name="height">552</attr>
                <style name="font-size">50</style>
                <attr name="text" binding="#epg-data/data/recom_list/[0]/video_name"></attr>
                <attr name="img.1" binding="=scale:{#epg-data/data/recom_list/[0]/video_img_h}"></attr>
                <data name="userdata" binding="#epg-data/data/recom_list/[0]/video_id"></data>
