<?xml version="1.0" encoding="utf-8"?>
<starcor.xul xmlns="http://www.starcor.cn/XUL" screen="1920x1080">
	<page id="MainPage">
		<layout>
			<style name="background-color">FF101010</style>
			<item type="label">
				<attr name="x">200</attr>
				<attr name="y">200</attr>
				<attr name="text">This is a sample xul project written in kotlin, built with gradle</attr>
				<focus mode="focusable" focused="true"/>
				<action event="click" type="usr_cmd">test message</action>
			</item>
		</layout>
		<selector>
			<select type="label">
				<style name="font-color">FFFFFFFF</style>
				<style name="font-size">42</style>
			</select>

			<select type="label" state="focused">
				<style name="border">4,FF00FF00</style>
			</select>
		</selector>
	</page>

</starcor.xul>
