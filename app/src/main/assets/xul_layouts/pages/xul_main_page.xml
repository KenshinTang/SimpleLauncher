<?xml version="1.0" encoding="utf-8"?>
<starcor.xul xmlns="http://www.starcor.cn/XUL" screen="1920x1080">
	<page id="MainPage">
		<layout>
            <style name="background-image">file:///.assets/images/background.jpg</style>
			<item id="clock_label" type="label">
				<focus mode="nofocus"/>
				<attr name="x">1600</attr>
				<attr name="y">80</attr>
				<style name="font-size">48</style>
				<style name="font-color">FFFFFFFF</style>
                <action event="click" type="usr_cmd">openListPage</action>
			</item>
			<item id="poster_1" class="poster" type="image">
                <focus mode="focusable" focused="true"/>
				<attr name="x">166</attr>
				<attr name="text">电影</attr>
				<attr name="img.0">file:///.assets/images/bg_movie.png</attr>
				<attr name="img.1">file:///.assets/images/icon_movie.png</attr>
                <attr name="img.1.width">100</attr>
                <attr name="img.1.height">100</attr>
                <data name="userdata">movie</data>
                <action event="click" type="usr_cmd">openListPage</action>
			</item>
            <item id="poster_2" class="poster" type="image">
                <attr name="x">435</attr>
                <attr name="text">电视剧</attr>
                <attr name="img.0">file:///.assets/images/bg_tvplay.png</attr>
                <attr name="img.1">file:///.assets/images/icon_tvplay.png</attr>
                <data name="userdata">tvplay</data>
                <action event="click" type="usr_cmd">openListPage</action>
            </item>
            <item id="poster_3" class="poster" type="image">
                <attr name="x">705</attr>
                <attr name="text">综艺</attr>
                <attr name="img.0">file:///.assets/images/bg_variety.png</attr>
                <attr name="img.1">file:///.assets/images/icon_variety.png</attr>
                <data name="userdata">variety</data>
                <action event="click" type="usr_cmd">openListPage</action>
            </item>
            <item id="poster_4" class="poster" type="image">
                <attr name="x">975</attr>
                <attr name="text">动漫</attr>
                <attr name="img.0">file:///.assets/images/bg_anim.png</attr>
                <attr name="img.1">file:///.assets/images/icon_anim.png</attr>
                <data name="userdata">animation</data>
                <action event="click" type="usr_cmd">openListPage</action>
            </item>
            <item id="poster_5" class="poster" type="image">
                <attr name="x">1245</attr>
                <attr name="text">应用</attr>
                <attr name="img.0">file:///.assets/images/bg_apps.png</attr>
                <attr name="img.1">file:///.assets/images/icon_apps.png</attr>
                <action event="click" type="usr_cmd">openAppList</action>
            </item>
            <item id="poster_6" class="poster" type="image">
                <attr name="x">1515</attr>
                <attr name="text">设置</attr>
                <attr name="img.0">file:///.assets/images/bg_setting.png</attr>
                <attr name="img.1">file:///.assets/images/icon_setting.png</attr>
                <action event="click" type="usr_cmd">openSetting</action>
            </item>
		</layout>
		<selector>
			<select class="poster">
				<attr name="y">248</attr>
				<attr name="width">240</attr>
				<attr name="height">580</attr>
                <attr name="img.0.width">240</attr>
                <attr name="img.0.height">580</attr>
                <attr name="img.0.round-rect">2</attr>
                <attr name="img.1.mode">center</attr>
                <attr name="img.1.width">120</attr>
                <attr name="img.1.height">120</attr>
                <attr name="img.1.align">0.5, 0.15</attr>
				<style name="font-size">36</style>
				<style name="font-align">0.5, 0.8</style>
				<style name="font-color">FFFFFFFF</style>
			</select>
            <select class="poster" state="focused">
                <style name="scale">1.1</style>
            </select>
		</selector>
	</page>

</starcor.xul>
