<?xml version="1.1" encoding="utf-8"?>
<starcor.xul screen="1920x1080" xmlns="http://www.starcor.cn/XUL">
	<component id="media-player-title-frame">
		<area type="slider">
			<attr name="x">32</attr>
			<attr name="y">32</attr>
			<item class="media-title" id="media-title" type="label">
				<attr name="text"/>
			</item>
			<item class="media-sub-title" id="media-sub-title" type="label">
				<attr name="text"/>
			</item>
		</area>
		<selector>
			<select class="title-frame">
				<attr name="y">-190</attr>
				<attr name="width">match_parent</attr>
				<attr name="height">190</attr>
				<style name="background-image">file:///.assets/images/player/gradient_b.png</style>
			</select>
			<select class="media-title">
				<attr name="height">68</attr>
				<style name="margin">16</style>
				<style name="font-color">CCFFFFFF</style>
				<style name="font-size">62</style>
				<style name="font-align">0,0.5</style>
			</select>
			<select class="media-sub-title">
				<attr name="height">68</attr>
				<style name="margin">16</style>
				<style name="font-color">CCFFFFFF</style>
				<style name="font-size">42</style>
				<style name="font-align">0,0.5</style>
			</select>
		</selector>
	</component>
	<component id="media-player-control-bar">
		<area class="control-bar-container">
			<item id="player-state" type="image"/>
			<area type="slider">
				<style name="padding">0,30</style>
				<attr name="y">160</attr>
				<item id="player-time-begin" type="label" class="player-time-label"/>
				<item id="player-pos" type="seek_bar"/>
				<item id="player-time-end" type="label" class="player-time-label"/>
			</area>
		</area>
		<selector>
			<select class="control-bar">
				<attr name="y">240</attr>
			</select>
			<select class="control-bar-container">
				<attr name="y">840</attr>
				<attr name="width">match_parent</attr>
				<attr name="height">240</attr>
				<style name="background-image">file:///.assets/images/player/gradient_a.png</style>
			</select>
			<select class="player-time-label">
				<style name="font-color">FFFFFFFF</style>
				<style name="font-size">32</style>
				<style name="font-align">0.5,0.5</style>
				<attr name="width">150</attr>
				<attr name="height">48</attr>
				<attr name="text">00:00:00</attr>
			</select>
			<select id="player-pos">
				<attr name="max-layers">5</attr>
				<style name="font-color">FFFFFFFF</style>
				<style name="font-size">32</style>
				<style name="padding">0,16</style>
				<attr name="width">match_parent</attr>
				<attr name="height">48</attr>
				<attr name="img.0">@color:CF7080FF,16,16</attr>
				<attr name="img.0.padding">8,16,16,8</attr>

				<attr name="img.3">@color:CCA0C0FF,16,16</attr>
				<attr name="img.3.padding">8,16,16,8</attr>

				<attr name="img.4">file:///.assets/images/player/seekbar_thumb.png</attr>
				<attr name="img.4.mode">center</attr>
				<attr name="img.4.width">2</attr>
				<attr name="img.4.height">33</attr>
				<attr name="img.4.align">0,0</attr>
				<attr name="img.4.padding">8,32,32,8</attr>
			</select>
			<select id="player-state">
				<attr name="y">12</attr>
				<focus mode="nofocus"/>
				<attr name="width">147</attr>
				<attr name="height">150</attr>
				<attr name="img.0">file:///.assets/images/player/state_playing.png</attr>
				<attr name="img.1">file:///.assets/images/player/state_paused.png</attr>
				<attr name="img.2">file:///.assets/images/player/state_fast_forward.png</attr>
				<attr name="img.3">file:///.assets/images/player/state_rewind.png</attr>
				<attr name="img.0.visible">true</attr>
				<attr name="img.1.visible">false</attr>
				<attr name="img.2.visible">false</attr>
				<attr name="img.3.visible">false</attr>
			</select>
			<select class="player-state-paused">
				<attr name="img.0.visible">false</attr>
				<attr name="img.1.visible">true</attr>
			</select>
			<select class="player-state-fast-forward">
				<attr name="img.0.visible">false</attr>
				<attr name="img.1.visible">false</attr>
				<attr name="img.2.visible">true</attr>
				<attr name="img.3.visible">false</attr>
			</select>
			<select class="player-state-rewind">
				<attr name="img.0.visible">false</attr>
				<attr name="img.1.visible">false</attr>
				<attr name="img.2.visible">false</attr>
				<attr name="img.3.visible">true</attr>
			</select>
		</selector>
	</component>
</starcor.xul>
