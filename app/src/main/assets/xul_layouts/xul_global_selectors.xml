<?xml version="1.0" encoding="utf-8"?>
<starcor.xul xmlns="http://www.starcor.cn/XUL" screen="1920x1080">
    <selector>
        <select class="match_parent_wh">
            <attr name="width">match_parent</attr>
            <attr name="height">match_parent</attr>
        </select>
        <select class="hide">
            <style name="display">none</style>
        </select>
        <select class="focus_border" state="focused">
            <attr name="img.0.padding">-24,-28</attr>
            <attr name="img.0">file:///.assets/images/poster_shadow.9.png</attr>
            <style name="border">4,d82cbdd7</style>
            <attr name="marquee">500,1000,3000,50%</attr>
        </select>
        <select class="separator_line">
            <focus mode="nofocus"/>
            <attr name="width">match_parent</attr>
            <attr name="height">2</attr>
            <style name="background-image">file:///.assets/images/line.9.png</style>
        </select>
        <select class="focus_scale">
            <action event="focus" type="script/javascript">
                this.blinkClass("keep_topmost_focused");
            </action>
            <action event="blur" type="script/javascript">
                this.blinkClass("keep_topmost");
            </action>
        </select>
        <select class="focus_scale" state="focused">
            <style name="z-index">10</style>
            <style name="scale">1.1</style>
        </select>
        <select class="focus_border" state="focused">
            <attr name="img.0.padding">-24,-28</attr>
            <attr name="img.0">file:///.assets/images/poster_shadow.9.png</attr>
            <style name="border">4,d82cbdd7</style>
        </select>
        <select class="focus_border_bold" state="focused">
            <attr name="img.0.padding">-24,-28</attr>
            <attr name="img.0">file:///.assets/images/poster_shadow.9.png</attr>
            <style name="border">5,d82cbdd7</style>
        </select>
    </selector>
</starcor.xul>
